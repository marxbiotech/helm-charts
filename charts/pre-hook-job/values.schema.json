{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "job": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "hash": {
          "type": "string"
        },
        "hookWeight": {
          "type": "string"
        },
        "hookDeletePolicy": {
          "type": "string",
          "enum": ["hook-succeeded", "hook-failed", "before-hook-creation"]
        },
        "backoffLimit": {
          "type": "integer",
          "minimum": 0
        },
        "ttlSecondsAfterFinished": {
          "oneOf": [
            {
              "type": "integer",
              "minimum": 0
            },
            {
              "type": "null"
            }
          ]
        },
        "activeDeadlineSeconds": {
          "oneOf": [
            {
              "type": "integer",
              "minimum": 1
            },
            {
              "type": "null"
            }
          ]
        },
        "annotations": {
          "type": "object"
        },
        "labels": {
          "type": "object"
        }
      }
    },
    "image": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "repository": {
          "type": "string"
        },
        "tag": {
          "type": "string"
        },
        "pullPolicy": {
          "type": "string",
          "enum": ["Always", "IfNotPresent", "Never"]
        }
      }
    },
    "imagePullSecrets": {
      "type": "array"
    },
    "command": {
      "type": "array"
    },
    "args": {
      "type": "array"
    },
    "env": {
      "type": "array"
    },
    "envFrom": {
      "type": "array"
    },
    "resources": {
      "type": "object"
    },
    "podSecurityContext": {
      "type": "object"
    },
    "securityContext": {
      "type": "object"
    },
    "volumeMounts": {
      "type": "array"
    },
    "volumes": {
      "type": "array"
    },
    "nodeSelector": {
      "type": "object"
    },
    "tolerations": {
      "type": "array"
    },
    "affinity": {
      "type": "object"
    },
    "restartPolicy": {
      "type": "string",
      "enum": ["Never", "OnFailure"]
    },
    "serviceAccountName": {
      "type": "string"
    },
    "podAnnotations": {
      "type": "object"
    },
    "podLabels": {
      "type": "object"
    },
    "nameOverride": {
      "type": "string"
    },
    "fullnameOverride": {
      "type": "string"
    }
  }
}
